{{#partial "content"}}
    <div class="container">
    <h1>ENTER SHIPPING DETAILS</h1>

        <div class="form">
            <form action='/details/new' method="post">
                <input type="text" name="flightNumber" class="form-control" placeholder="Flight No." required><br>
                <input type="date" name="arrivalTime" class="form-control" placeholder="Arrival Time" reequired><br>
                <input type="number" name="customDuty" class="form-control" placeholder="Custom Duty" reequired><br>
                <input type="number" name="containerNumber" class="form-control" placeholder="Container No." reequired><br>

                <button type="submit" class="btn btn-primary">SUBMIT</button>
            </form>
        </div>

    </div>


    {{/partial}}
{{>layout.hbs}}